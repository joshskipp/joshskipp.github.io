---
import BaseLayout from '@layouts/BaseLayout.astro'
const { frontmatter } = Astro.props;
const posts = await Astro.glob('../pages/projects/*.md')

---

        <BaseLayout>
            <div class="two-col">
                <div class="sidebar">
                    <h2>Projects</h2>
                    <ul>
                        {posts.map((post) => (
                            <li><a href={post.url}>{post.frontmatter.title}</a></li>
                        ))}
                    </ul>
                </div>
            
                <div class="main-area">
                    <slot>
                </div>
            </slot>
        </BaseLayout>