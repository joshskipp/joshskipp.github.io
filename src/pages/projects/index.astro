---
import BaseLayout from '@layouts/BaseLayout.astro';
const pageTitle = "Home Page";

const posts = await Astro.glob('./*.md')

---
<BaseLayout>
	<h1>Projects</h1>
	<p> A collection some of my work highlights.</p>
	<ul> 
		{posts.map((post) => (
			<li><a href={post.url}>{post.frontmatter.title}</a></li>
		))}
	</ul>
</BaseLayout>